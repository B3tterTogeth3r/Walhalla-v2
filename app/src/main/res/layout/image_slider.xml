<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:paddingStart="8dp"
    android:paddingTop="16dp"
    android:paddingEnd="8dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@id/diashow_image"
        style="@style/Diashow.Image"
        android:contentDescription="@string/image_description"
        android:scaleType="centerCrop" />

    <TextView style="@style/Diashow.Description" />

    <ImageButton
        style="@style/Diashow.Left"
        android:layout_above="@id/diashow_image"
        android:contentDescription="@string/image_description" />

    <ImageButton
        style="@style/Diashow.Right"
        android:layout_above="@id/diashow_image"
        android:contentDescription="@string/image_description" />

    <ProgressBar
        android:id="@+id/diashow_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>
