<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        style="@style/Custom.Layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_news_title"
            style="@style/Custom.Title" />

        <TextView
            android:id="@+id/item_news_time"
            style="@style/Custom.Text" />

        <LinearLayout
            android:id="@+id/item_news_content"
            style="@style/Custom.TableLayout"
            android:orientation="vertical" />

        <ImageButton
            android:id="@+id/item_news_image"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:contentDescription="@string/image_description"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>